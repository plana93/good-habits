<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pose_detection"
        tools:targetApi="31">
        <activity
            android:name=".squat"
            android:exported="false" />
        <!-- NEW MAIN ACTIVITY - Bottom Navigation -->
        <activity
            android:name=".ui.activity.NewMainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- EXERCISE LIBRARY - Template Management Only -->
        <activity
            android:name=".ui.activity.ExerciseLibraryActivity"
            android:exported="false"
            android:label="Libreria Esercizi" />
        <!-- WORKOUT LIBRARY - Circuit Template Management -->
        <activity
            android:name=".ui.activity.WorkoutLibraryActivity"
            android:exported="false"
            android:label="Libreria Allenamenti" />
        
        <!-- OLD MAIN - Declassato -->
        <activity
            android:name=".Habits"
            android:exported="false"
            android:label="Menu Vecchio (Backup)" />
        <activity
            android:name=".Squat"
            android:exported="true" />
        <activity
            android:name=".CameraSelectionActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <!-- *** ACTIVITY PER RECORDING *** -->
        <activity
            android:name=".RecordingCameraSelectionActivity"
            android:exported="false" />
        
        <!-- *** PHASE 1: SESSION MANAGEMENT ACTIVITIES *** -->
        <activity
            android:name=".SessionsHistoryActivity"
            android:exported="false"
            android:label="Storico Allenamenti" />
        <activity
            android:name=".SessionDetailActivity"
            android:exported="false"
            android:label="Dettagli Sessione" />
        
        <!-- *** PHASE 2: DASHBOARD ACTIVITY *** -->
        <activity
            android:name=".DashboardActivity"
            android:exported="false"
            android:label="Dashboard" />
        
        <!-- *** PHASE 3: EXPORT ACTIVITY *** -->
        <activity
            android:name=".ExportActivity"
            android:exported="false"
            android:label="Esporta Dati" />
        
        <!-- *** PHASE 4: CALENDAR & RECOVERY ACTIVITIES *** -->
        <activity
            android:name=".StreakCalendarActivity"
            android:exported="false"
            android:label="Calendario Costanza" />
        <activity
            android:name=".ManualSessionActivity"
            android:exported="false"
            android:label="Aggiungi Sessione Manuale" />
        
        <!-- *** PHASE 6: EXERCISE MANAGEMENT ACTIVITIES *** -->
        <activity
            android:name=".ExerciseSelectorActivity"
            android:exported="false"
            android:label="Scegli Esercizio" />
        
        <activity
            android:name=".ExerciseCreationActivity"
            android:exported="false"
            android:label="Crea Esercizio" />
        
        <activity
            android:name=".PhotoCaptureActivity"
            android:exported="false"
            android:label="Cattura Posizione"
            android:screenOrientation="portrait" />
        
        <!-- *** WORKOUT SYSTEM ACTIVITIES *** -->
        <activity
            android:name=".WorkoutCreationActivity"
            android:exported="false"
            android:label="Crea Workout" />
        
        <activity
            android:name=".WorkoutCreationActivitySimple"
            android:exported="false"
            android:label="Nuovo Workout" />
        
        <activity
            android:name=".WorkoutTrackingMenuActivity"
            android:exported="false"
            android:label="Inizia Allenamento" />
        
        <activity
            android:name=".WorkoutTrackingActivity"
            android:exported="false"
            android:label="Esegui Workout" />
        
        <activity
            android:name=".ManualExerciseActivity"
            android:exported="false"
            android:label="Esercizio Manuale" />
        
        <!-- *** NUOVO SISTEMA MODULARE - CLEAN ARCHITECTURE *** -->
    </application>

</manifest>