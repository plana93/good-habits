<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:width="44dp" android:height="120dp"/>
            <solid android:color="@color/knob_bg"/>
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="@color/knob_edge"/>
        </shape>
    </item>

    <!-- little neon line markers -->
    <item android:top="10dp" android:left="6dp" android:right="6dp">
        <shape android:shape="rectangle">
            <size android:height="6dp"/>
            <solid android:color="@color/neonBlue"/>
        </shape>
    </item>
    <item android:top="50dp" android:left="6dp" android:right="6dp">
        <shape android:shape="rectangle">
            <size android:height="6dp"/>
            <solid android:color="@color/neonBlue"/>
        </shape>
    </item>
    <item android:top="90dp" android:left="6dp" android:right="6dp">
        <shape android:shape="rectangle">
            <size android:height="6dp"/>
            <solid android:color="@color/neonBlue"/>
        </shape>
    </item>
</layer-list>
