<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Decorative neon marks around capture button -->
    <item android:top="50dp" android:left="20dp" android:right="20dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/neonOrange"/>
            <size android:width="40dp" android:height="2dp"/>
            <corners android:radius="1dp"/>
        </shape>
    </item>
    <item android:bottom="50dp" android:left="20dp" android:right="20dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/neonBlue"/>
            <size android:width="40dp" android:height="2dp"/>
            <corners android:radius="1dp"/>
        </shape>
    </item>
</layer-list>
