<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/mediaInfoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Media Preview"
        android:textSize="16sp"
        android:paddingBottom="8dp"/>

    <ImageView
        android:id="@+id/mediaPreviewImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@android:color/black"/>

    <ProgressBar
        android:id="@+id/mediaProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <!-- Filtri: available (orizzontale) e active (orizzontale) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/availableFiltersRecycler"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activeFiltersRecycler"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"/>

    <!-- Controls area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/secondsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration: 5s"/>

        <SeekBar
            android:id="@+id/durationSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="30"
            android:progress="5"/>

        <Button
            android:id="@+id/playSimButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play / Simulate"/>
    </LinearLayout>

</LinearLayout>