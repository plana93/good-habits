<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- Menu button semplice -->
    <ImageButton
        android:id="@+id/btn_menu_trigger"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/circle_neon_outline"
        android:contentDescription="Menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Menu dropdown -->
    <androidx.cardview.widget.CardView
        android:id="@+id/dropdown_menu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_menu_trigger"
        app:layout_constraintStart_toStartOf="parent"
        app:cardBackgroundColor="#222432">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView 
                android:id="@+id/menu_filter_bw" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:text="B/W Filter"/>
            
            <TextView 
                android:id="@+id/menu_filter_sobel" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:text="Sobel Filter"/>
            
            <TextView 
                android:id="@+id/menu_filter_pixel" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:text="Pixel Filter"/>
            
            <TextView 
                android:id="@+id/menu_filter_none" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:text="No Filter"/>
            
            <TextView 
                android:id="@+id/menu_switch_camera" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:text="Switch Camera"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Knob sinistro -->
    <ImageView
        android:id="@+id/knob_left"
        android:layout_width="52dp"
        android:layout_height="140dp"
        android:src="@drawable/toggle_knob"
        android:contentDescription="Left knob"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="4dp"/>

    <!-- Knob destro -->
    <ImageView
        android:id="@+id/knob_right"
        android:layout_width="52dp"
        android:layout_height="140dp"
        android:src="@drawable/toggle_knob"
        android:contentDescription="Right knob"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="4dp"/>

    <!-- Viewfinder centrale -->
    <FrameLayout
        android:id="@+id/viewfinder_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/viewfinder_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextureView
            android:id="@+id/textureView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"/>
    </FrameLayout>

    <!-- Pulsante capture -->
    <View
        android:id="@+id/capture_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/capture_inner_circle"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
