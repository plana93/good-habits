<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Camera fullscreen -->
    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter" />

    <!-- Recording status -->
    <TextView
        android:id="@+id/recordingStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#AA000000"
        android:padding="12dp"
        android:text="â— REC"
        android:textColor="#FF0000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!-- LEFT MENU: FEATURES -->
    <FrameLayout
        android:id="@+id/leftMenuContainer"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#DD151733"
        android:translationX="-1000dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/leftMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Icon-only left menu header removed to keep only icons -->

                <!-- Skeleton Feature -->
                <LinearLayout
                    android:id="@+id/featureSkeletonItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:paddingVertical="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_animated_lines"
                            android:contentDescription="Animated Skeleton"
                            android:tint="#FFFFFF" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchSkeleton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />
                    </LinearLayout>

                    <View
                        android:id="@+id/skeletonIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#39FF14"
                        android:layout_marginTop="8dp"
                        android:visibility="visible" />
                </LinearLayout>

                <!-- Dots Feature -->
                <LinearLayout
                    android:id="@+id/featureDotsItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:paddingVertical="12dp"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_glow_dots"
                            android:contentDescription="Glow Dots"
                            android:tint="#FFFFFF" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchDots"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />
                    </LinearLayout>

                    <View
                        android:id="@+id/dotsIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#39FF14"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Boxes Feature -->
                <LinearLayout
                    android:id="@+id/featureBoxesItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:paddingVertical="12dp"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_urban_boxes"
                            android:contentDescription="Urban Boxes"
                            android:tint="#FFFFFF" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchBoxes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false" />
                    </LinearLayout>

                    <View
                        android:id="@+id/boxesIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#39FF14"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Filters Feature -->
                <LinearLayout
                    android:id="@+id/featureFiltersItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:paddingVertical="12dp"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_filter"
                            android:contentDescription="Filters"
                            android:tint="#FFFFFF" />

                        <TextView
                            android:id="@+id/filterStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="None"
                            android:textColor="#888888"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/filtersIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#39FF14"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <!-- RIGHT MENU: DYNAMIC PARAMETERS -->
    <FrameLayout
        android:id="@+id/rightMenuContainer"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#DD151733"
        android:translationX="1000dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/rightMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/rightMenuTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš™ï¸ SKELETON"
                    android:textColor="#39FF14"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp" />

                <!-- Skeleton Parameters Container -->
                <LinearLayout
                    android:id="@+id/skeletonParams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Line Thickness"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:layout_marginBottom="8dp" />

                    <SeekBar
                        android:id="@+id/seekLineThickness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="10"
                        android:progress="2"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Animation Speed"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:layout_marginBottom="8dp" />

                    <SeekBar
                        android:id="@+id/seekAnimSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="20"
                        android:progress="10"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Curve Amount"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:layout_marginBottom="8dp" />

                    <SeekBar
                        android:id="@+id/seekCurveAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="35"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Number of Lines"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:layout_marginBottom="8dp" />

                    <SeekBar
                        android:id="@+id/seekNumLines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="8"
                        android:progress="3"
                        android:layout_marginBottom="20dp" />
                </LinearLayout>

                <!-- Dots Parameters Container -->
                <LinearLayout
                    android:id="@+id/dotsParams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dot Size"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:layout_marginBottom="8dp" />

                    <SeekBar
                        android:id="@+id/seekDotSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="20"
                        android:progress="8"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Glow Intensity"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:layout_marginBottom="8dp" />

                    <SeekBar
                        android:id="@+id/seekGlowIntensity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="50"
                        android:layout_marginBottom="20dp" />

                    <!-- Save with Effects Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ’¾ Save with Effects"
                            android:textColor="#FFFFFF"
                            android:textSize="13sp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchSaveWithEffects"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false" />
                    </LinearLayout>

                    <!-- Effect Color RGB -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¨ Effect Color - Red"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp" />

                    <SeekBar
                        android:id="@+id/seekColorR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="255"
                        android:progress="57"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¨ Effect Color - Green"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:layout_marginBottom="8dp" />

                    <SeekBar
                        android:id="@+id/seekColorG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="255"
                        android:progress="255"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¨ Effect Color - Blue"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:layout_marginBottom="8dp" />

                    <SeekBar
                        android:id="@+id/seekColorB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="255"
                        android:progress="20"
                        android:layout_marginBottom="20dp" />
                </LinearLayout>

                <!-- Boxes Parameters Container -->
                <LinearLayout
                    android:id="@+id/boxesParams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Box Size"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:layout_marginBottom="8dp" />

                    <SeekBar
                        android:id="@+id/seekBoxSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="150"
                        android:progress="100"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Randomness"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:layout_marginBottom="8dp" />

                    <SeekBar
                        android:id="@+id/seekBoxRandomness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="50"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Appear Probability"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:layout_marginBottom="8dp" />

                    <SeekBar
                        android:id="@+id/seekBoxProbability"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="30"
                        android:layout_marginBottom="20dp" />
                </LinearLayout>

                <!-- Filters Parameters Container -->
                <LinearLayout
                    android:id="@+id/filtersParams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btnFilterNone"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="None"
                        android:backgroundTint="#222432"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btnFilterBW"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Black &amp; White"
                        android:backgroundTint="#222432"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btnFilterSobel"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Edge Detection"
                        android:backgroundTint="#222432"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btnFilterPixel"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Pixelated"
                        android:backgroundTint="#222432"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#39FF14"
                    android:layout_marginVertical="16dp" />

                <Button
                    android:id="@+id/btnSwitchCamera"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="ðŸ”„ Switch Camera"
                    android:backgroundTint="#39FF14"
                    android:textColor="#000000" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <!-- Left Menu Icon -->
    <View
        android:id="@+id/leftMenuIcon"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_gravity="start|center_vertical"
        android:background="#8839FF14"
        android:clickable="true"
        android:focusable="true" />

    <!-- Right Menu Icon -->
    <View
        android:id="@+id/rightMenuIcon"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_gravity="end|center_vertical"
        android:background="#8839FF14"
        android:clickable="true"
        android:focusable="true" />

    <!-- Capture Button -->
    <FrameLayout
        android:id="@+id/captureButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="40dp"
        android:clickable="true"
        android:focusable="true">

        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/capture_button_bg" />

        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/capture_button_inner" />
    </FrameLayout>

</FrameLayout>
